<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@color/colorWhite">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimaryDark" />

    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">
            <android.support.v7.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image"
                        android:src="@drawable/products_nocircle_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_below="@+id/image"
                        android:id="@+id/textView2"
                        android:textSize="@dimen/primaryText"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:text="@string/productandtax"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:id="@+id/imageCustomer"
                        android:src="@drawable/customer_nocircle_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_below="@+id/imageCustomer"
                        android:id="@+id/tvCustomer"
                        android:textSize="@dimen/primaryText"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:text="@string/customer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:contentPadding="10dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:id="@+id/imageReports"
                        android:src="@drawable/reports_nocircle_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_below="@+id/imageReports"
                        android:id="@+id/tvReports"
                        android:textSize="@dimen/primaryText"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:text="@string/reports"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_view4"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:contentPadding="10dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:id="@+id/imageIngredienats"
                        android:src="@drawable/ingredients_micro_inventory_nocircle_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_below="@+id/imageIngredienats"
                        android:id="@+id/tvIngredienats"
                        android:textSize="@dimen/primaryText"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:text="@string/ingredienats"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">
            <android.support.v7.widget.CardView
                android:id="@+id/card_view5"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageSettings"
                        android:src="@drawable/settings_nocircle_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_below="@+id/imageSettings"
                        android:id="@+id/textViewSettings"
                        android:textSize="@dimen/primaryText"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:text="@string/settings"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view6"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:id="@+id/imageSync"
                        android:src="@drawable/backup_nocircle_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_below="@+id/imageSync"
                        android:id="@+id/tvSyncData"
                        android:textSize="@dimen/primaryText"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:text="@string/syncdata"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:textAppearanceSmall"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view7"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:contentPadding="10dp"
                android:layout_weight="1">

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_view8"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:contentPadding="10dp"
                android:layout_weight="1">

            </android.support.v7.widget.CardView>



        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
