<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:id="@id/relativeLayout1" android:background="#ffe6e6e6" android:layout_width="wrap_content" android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:gravity="center_vertical" android:background="#ffe6e6e6" android:layout_width="320dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp">
        <Button android:textStyle="bold" android:id="@+id/merge_cancel" android:background="@drawable/light_black_click_shape_rounded_corners" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="0dp" android:layout_marginBottom="5dp" android:src="@drawable/ic_arrow_back_black_24dp" android:text="Cancel" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:padding="15.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#ff000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Merge bill" />
        </LinearLayout>
        <Button android:textStyle="bold" android:id="@+id/merge_apply" android:background="@drawable/green_click_shape_rounded_corners" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="0dp" android:layout_marginRight="10dp" android:layout_marginBottom="5dp" android:src="@drawable/ic_done_white_24dp" android:text="Merge" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
    </RelativeLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="#ffe6e6e6" android:layout_width="320dp" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="15dp" android:paddingTop="10dp" android:paddingRight="20dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="match_parent">
            <TextView android:textSize="15sp" android:textColor="#ff000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Merge bill From  " />
            <TextView android:textSize="18sp" android:id="@+id/current_tablename" android:textStyle="bold" android:textColor="#ff000000" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="  Table Name" />
         <!--<TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#ff000000" android:gravity="center_vertical" android:id="@+id/current_table_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" Name" />-->
            <TextView android:textSize="15sp" android:textColor="#ff000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="To" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:paddingLeft="15dp" android:paddingTop="10dp" android:paddingRight="15dp" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <Spinner android:textSize="15sp" android:textColor="#ff000000" android:ellipsize="end"  android:id="@+id/change_table_spinner" android:paddingLeft="0dp" android:paddingTop="12dp" android:paddingRight="0dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:prompt="@string/choose_orderlist" android:spinnerMode="dropdown" style="@style/Widget.AppCompat.Spinner.Underlined" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>